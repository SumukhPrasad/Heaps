		<meta name="viewport" content="width=device-width,initial-scale=1">


		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
		<%= javascript_importmap_tags %>
	</head>

	<body>

	<% if user_signed_in? %>
	<%= render :partial => "layouts/useractions" %>
	<main>
	<% end %>

		<% if notice %>
			<p style="padding: 5px; border: 2px dotted #555; color: darkgreen;"><i><%= notice %></i></p>
		<% end %>
		<% if alert %>
			<p style="padding: 5px; border: 2px dotted #555; color: red;"><i><%= alert %></i></p>
		<% end %>
		<%= yield %>

	<% if user_signed_in? %>	
	</main>
	<% end %>

	</body>
</html>
